{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "chutes": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Chutes AI",
      "options": {
        "baseURL": "https://llm.chutes.ai/v1",
        "headers": {
          "X-Enable-Thinking": "true"
        }
      },
      "models": {
        "zai-org/GLM-4.5-FP8": {
          "name": "GLM 4.5"
        },
        "zai-org/GLM-4.5-Air": {
          "name": "GLM 4.5 Air"
        },
        "deepseek-ai/DeepSeek-V3.1": {
          "name": "DeepSeek V3.1"
        },
        "moonshotai/Kimi-K2-Instruct-0905": {
          "name": "Kimi K2 0905"
        },
        "meituan-longcat/LongCat-Flash-Chat-FP8": {
          "name": "LongCat Flash"
        },
        "LLM360/K2-Think": {
          "name": "K2 Think"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "playwright": {
      "enabled": true,
      "type": "local",
      "command": [
        "pnpx",
        "@playwright/mcp@latest",
        "--executable-path=/usr/bin/vivaldi-snapshot",
        "--no-sandbox",
        "--headless"
      ],
      "timeout": 30
    }
  }
}