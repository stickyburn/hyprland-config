{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "default_agent": "plan",
  "permission": {
    "*": "ask",
    "read": "allow",
    "external_directory": "allow",
    "webfetch": "allow",
    "deepwiki_*": "allow",
    "bash": {
      "ls *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "which *": "allow",
      "brew list *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "cat *": "allow",
      "pwd *": "allow"
    },
    "task": {
      "*": "ask",
      "explore": "allow"
    }
  },
  "mcp": {
    "deepwiki": {
      "enabled": true,
      "url": "https://mcp.deepwiki.com/mcp",
      "type": "remote"
    }
  },
  "keybinds": {
    "leader": "super+g",
    "command_list": "super+p"
  },
  "agent": {
    "build": {
      "color": "#98E4A7"
    },
    "plan": {
      "color": "#D7AFFF"
    }
  },
  "instructions": [
    "SYSTEM.md"
  ]
}
