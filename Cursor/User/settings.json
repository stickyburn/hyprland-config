{
  // UI
  "editor.fontFamily": "Zed Sans",
  "terminal.integrated.fontFamily": "Zed Mono",
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line-thin",
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "off",
  "editor.tabSize": 2,
  "editor.folding": false,
  "editor.foldingHighlight": false,
  "editor.glyphMargin": false,
  "editor.guides.indentation": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.minimap.enabled": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.colors": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  // formatting
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  // terminal
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.scrollback": 10000,
  // search
  "search.exclude": {
    "**-lock.yaml": true,
    "**/*.cjs": true,
    "**/*.svg": true,
    "**/.cache": true,
    "**/.next": true,
    "**/@remote-types": true,
    "**/cache": true,
    "**/commit-msg": true,
    "**/dependabot.yml": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/static": true,
    ".yarnrc.yml": true,
    "yarn.lock": true
  },
  // git
  "git.decorations.enabled": false,
  // workspace
  "breadcrumbs.enabled": false,
  "extensions.ignoreRecommendations": true,
  "json.schemaDownload.enable": true,
  "npm.packageManager": "bun",
  "window.commandCenter": true,
  "window.zoomLevel": 0,
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Tomorrow Night Blue",
  "workbench.editor.decorations.badges": false,
  "workbench.editor.decorations.colors": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  // LSP
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[svelte]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "biome.lsp.bin": "/Users/lemonaid/.local/share/bun/bin/biome",
  "ruff.nativeServer": "on",
  "ruff.path": [
    "/Users/lemonaid/.local/bin/ruff"
  ],
  // themes
  "workbench.colorCustomizations": {
    "[Default Light Modern]": {
      "activityBar.background": "#eee9ff",
      "editor.background": "#eee9ff",
      "editor.foreground": "#221727",
      "editor.lineHighlightBackground": "#d3c9f6",
      "editor.selectionBackground": "#d3c9f6",
      "editorGroupHeader.tabsBackground": "#eee9ff",
      "editorHoverWidget.background": "#d3c9f6",
      "editorOverviewRuler.border": "#eee9ff",
      "editorSuggestWidget.background": "#eee9ff",
      "editorSuggestWidget.border": "#eee9ff",
      "editorSuggestWidget.selectedBackground": "#eee9ff",
      "editorSuggestWidget.selectedForeground": "#6A6367",
      "input.background": "#eee9ff",
      "menu.background": "#eee9ff",
      "quickInput.background": "#eee9ff",
      "scrollbar.shadow": "#eee9ff",
      "scrollbarSlider.activeBackground": "#eee9ff",
      "scrollbarSlider.background": "#eee9ff",
      "scrollbarSlider.hoverBackground": "#eee9ff",
      "sideBar.background": "#eee9ff",
      "statusBar.background": "#eee9ff",
